                    <% for (var m =1; m < 13; m++) { %>
                    <option value="<%=m %>월">
                        <%=m %>월
                    </option>
                    <% } %>
                </select>
            </label>

            <label for="date">
                <select name="date">
                    <% for (var d =1; d < 32; d++) { %>
                    <option value="<%=d %>일">
