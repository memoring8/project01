<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title> signup </title>
    <link rel="stylesheet" href="/public/css/signUp.css">
    <script src="../public/js/signUp.js" defer></script>
</head>
<body>
    <!-- logo -->
    <a href="" class="logo">
        <img src="../public/img/logo-2.png" alt="" >
    </a>

    <!-- sign up form -->
    <form action="/signup" id="form_register" method="post">
        <label for="id">
            <div>아이디</div> 
            <input type="text" name="id" placeholder=" Id" required id="id">
            <div class="id_msg"></div>
        </label>
        <br>
        <label for="Password_1">
            <div>비밀번호</div> 
            <input type="password" name="Password_1" placeholder=" Password" required id="pw">
            <div class="pw_msg"></div>
        </label>
        <br>
        <label for="Password_2">
            <div>비밀번호 재확인</div> 
            <input type="password" name="Password_2" placeholder=" Password" required id="pw2">
            <div class="pw2_msg"></div>
        </label>
        <br>
        <label for="name">
            <div>이름</div>
            <input type="text" name="name" placeholder=" Name" required>
            <div></div>
        </label>
        <br>
        <div>생년월일</div>
        <div class="selects">
            <label for="year">
                <select name="year" required>
                    <option value="default">년</option>
                    <% for (var y =1950; y < 2023; y++) { %>
                    <option value="<%=y %>년">
                        <%=y %>년
                    </option>
                    <% } %>
                </select>
            </label>

            <label for="month">
                <select name="month" required>
                    <option value="default">월</option>
                    <% for (var m =1; m < 13; m++) { %>
                    <option value="<%=m %>월">
                        <%=m %>월
                    </option>
                    <% } %>
                </select>
            </label>

            <label for="date">
                <select name="date" required>
                    <option value="default">일</option>
                    <% for (var d =1; d < 32; d++) { %>
                    <option value="<%=d %>일">
                        <%=d %>일
                    </option>
                    <% } %>
                </select>
            </label>
        </div>
        
        <button class="btn">가입하기</button>
    </form>

</body>
</html>